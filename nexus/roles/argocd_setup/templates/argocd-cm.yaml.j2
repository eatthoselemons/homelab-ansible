apiVersion: v1
kind: ConfigMap
metadata:
  name: argocd-cm
  namespace: argocd
data:
  url: https://argocd.{{ domain }}
  admin.enabled: "true"
  repositories: |
    - type: git
      url: {{ git_repo_url }}
      name: homelab-infra
  resource.customizations: |
    argoproj.io/Application:
      health.lua: |
        hs = {}
        hs.status = "Healthy"
        return hs 